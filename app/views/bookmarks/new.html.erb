<h1>Add a bookmark</h1>
<%= simple_form_for([@list, @bookmark]) do |f| %>

  <div class="form-inputs">
    <%= f.input :comment %>
    <%= f.association :movie, collection: Movie.all %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<p> <%= link_to "Back to list", list_path(@list) %></p>
